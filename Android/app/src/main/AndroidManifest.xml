<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.proyecto">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PROYECTO"
        tools:targetApi="31">

        <activity
            android:name=".util.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".util.RegistrarUsuario"
            android:exported="false"></activity>
        <activity android:name=".util.ShopActivity"
            android:exported="false"></activity>
        <activity android:name=".util.LoginUsuario"
            android:exported="false"></activity>
        <activity android:name=".util.MenuUsuario"
            android:exported="false"></activity>
        <activity android:name=".util.Inventario"
            android:exported="false"></activity>
        <activity android:name=".util.PerfilUsuario"
            android:exported="false"></activity>
        <activity android:name=".util.FAQSActivity"
            android:exported="false"></activity>

    </application>

</manifest>
